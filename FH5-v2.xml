<Keyboard>
  <Name>Forza-2</Name>
  <Height>100%</Height>
  <SymbolMargin>1</SymbolMargin>
  <BorderThickness>0,0,0,0</BorderThickness>
  <Position>Top</Position>
  <Width>100%</Width>
  <HorizontalOffset>0</HorizontalOffset>
  <VerticalOffset>0</VerticalOffset>
  <BackgroundColor>Transparent</BackgroundColor>
  <BorderColor>Transparent</BorderColor>
  <WindowState>Floating</WindowState>
  <Grid>
    <Rows>8</Rows>
    <Cols>10</Cols>
  </Grid>
  <KeyGroup CompletionTimes="2%, 50%" LockOnTime="25" Name="QuickKey"/>
  <KeyGroup Name="AcceleratingKey" BackgroundColor="black" Opacity=".9" KeyDownOpacity="1" LockOnTime="25" CompletionTimes="100%, 80%, 60%, 40%, 25%, 25%" />   
  <KeyGroup Name="Forward" BackgroundColor="black" Opacity=".9" />
  <KeyGroup Name="Backward" BackgroundColor="black" Opacity=".9" />
  
  <Content>
    <DynamicKey Row="0" Col="0">
      <Label>Esc</Label>
      <KeyPress>Escape</KeyPress>
    </DynamicKey>
    <DynamicKey Row="0" Col="2">
      <KeyGroup>backward</KeyGroup>
      <KeyUp>Backward</KeyUp>
      <KeyUp>Forward</KeyUp>
      <Label>reverse</Label>
      <Loop Count="7">
        <KeyPress Duration="150">s</KeyPress>
        <Wait>200</Wait>
      </Loop>
    </DynamicKey>
    <DynamicKey Row="0" Col="3">
      <KeyGroup>forward</KeyGroup>
      <KeyUp>Backward</KeyUp>
      <KeyUp>Forward</KeyUp>
      <Label>slow</Label>
      <Loop Count="7">
        <KeyPress Duration="125">w</KeyPress>
        <Wait>250</Wait>
      </Loop>
    </DynamicKey>
    <DynamicKey Row="0" Col="4">
      <KeyUp>Backward</KeyUp>
      <KeyUp>Forward</KeyUp>
      <KeyGroup>forward</KeyGroup>
      <Label>med</Label>
      <Loop Count="7">
        <KeyPress Duration="200">w</KeyPress>
        <Wait>100</Wait>
      </Loop>
    </DynamicKey>
    <DynamicKey Row="0" Col="5">
      <KeyGroup>forward</KeyGroup>
      <KeyUp>Backward</KeyUp>
      <KeyUp>Forward</KeyUp>
      <KeyToggle>w</KeyToggle>
      <Label>hold w</Label>
    </DynamicKey>
    <DynamicKey Row="0" Col="7">
      <Label>map</Label>
      <KeyPress>m</KeyPress>
    </DynamicKey>
    <DynamicKey Row="0" Col="8">
      <Label>rewind</Label>
      <KeyPress>r</KeyPress>
    </DynamicKey>
    <DynamicKey Row="0" Col="9">
      <Symbol>BackIcon</Symbol>
      <Label>Back</Label>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="9">
      <ChangeKeyboard ReturnToThisKeyboard="true">FH5-menus</ChangeKeyboard>
      <Label>Menu\nkeys</Label>
    </DynamicKey>
    <DynamicKey Row="2" Col="0">
      <Label>brake</Label>
      <KeyPress Duration="750">s</KeyPress>
      <KeyGroup>QuickKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="2" Col="9">
      <Label>brake</Label>
      <KeyPress Duration="750">s</KeyPress>
      <KeyGroup>QuickKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="7" Col="4" Width="2">
      <KeyUp>w</KeyUp>
      <KeyUp>Forward</KeyUp>
      <KeyPress Duration="400">Space</KeyPress>
      <KeyGroup>QuickKey</KeyGroup>
      <Label>Stop</Label>
    </DynamicKey>
  </Content>
</Keyboard>