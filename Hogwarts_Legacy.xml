<?xml version="1.0" encoding="utf-8"?>
<Keyboard>
    <Name>Hogwarts Legacy</Name>
    <SymbolMargin>10</SymbolMargin>
    <BackgroundColor>Transparent</BackgroundColor>
    <Height>90%</Height>
    <Position>Top</Position>
    <VerticalOffset>5%</VerticalOffset>
    <Width>98%</Width>
    <BackgroundColor>Transparent</BackgroundColor>
    <BorderColor>Transparent</BorderColor>
    <WindowState>Floating</WindowState>
    <HideFromKeyboardMenu>true</HideFromKeyboardMenu>
    <Grid>
        <Rows>18</Rows>
        <Cols>22</Cols>
    </Grid>
    <KeyGroup BackgroundColor="black" CompletionTimes="1%, 100%" KeyDownOpacity="1" LockOnTime="0"
        Name="QuickKey" Opacity="1,0" />
    <KeyGroup BackgroundColor="black" CompletionTimes="50%" KeyDownOpacity="1" LockOnTime="25"
        Name="HalfSpeed" Opacity=".9" />
    <KeyGroup AutoScaleToOneKeyHeight="false" AutoScaleToOneKeyWidth="false" Name="Scaling" />

    <Content>
       
        <DynamicKey Col="2" Height="2" Row="0" Width="2">
            <Label>L thumb</Label>
            <KeyToggle>XboxLeftThumb</KeyToggle>
        </DynamicKey>

        <DynamicKey Col="4" Height="2" Row="0" Width="2">
            <Label>Tank\ncontrols</Label>
            <Action>LegacyJoystick</Action>
        </DynamicKey>
        <DynamicKey Col="6" Height="2" Row="0" Width="2">
            <Label>Move</Label>
            <Action>LeftJoystick</Action>
        </DynamicKey>
        <DynamicKey Col="13" Height="2" Row="0" Width="2">
            <Label>Look</Label>
            <Action>RightJoystick</Action>
        </DynamicKey>
        <DynamicKey Col="15" Height="2" Row="0" Width="2">
            <Label>Walk</Label>
            <KeyToggle PauseWhenLookingAtAnyKey="true">XBoxLeftThumb|Forward|1.0</KeyToggle>
        </DynamicKey>

        <DynamicKey Col="17" Height="2" Row="0" Width="2">
            <Label>R thumb</Label>
            <KeyToggle>XboxRightThumb</KeyToggle>
        </DynamicKey>

        <DynamicKey Col="19" Height="2" Row="0" Width="2">
            <Label>D-Pad</Label>
            <KeyGroup>HalfSpeed</KeyGroup>
            <ChangeKeyboard BackReturnsHere="False">Hogwarts_Legacy_dpad</ChangeKeyboard>
        </DynamicKey>

        <DynamicKey Col="1" Height="2" Row="2" Width="2">
            <Label>Slow\nwalk</Label>
            <KeyToggle PauseWhenLookingAtAnyKey="true">XBoxLeftThumb|Forward|0.5</KeyToggle>
        </DynamicKey>
        <DynamicKey Col="3" Height="2" Row="2" Width="2">
            <Label>LT\nToggle</Label>
            <KeyToggle PauseWhenLookingAtThisKey="true">XboxLeftTrigger</KeyToggle>
        </DynamicKey>
        <DynamicKey Col="5" Height="2" Row="2" Width="2">
            <Label>Menu</Label>
            <KeyPress>XboxStart</KeyPress>
        </DynamicKey>
        <!-- <DynamicKey Col="14" Height="2" Row="2" Width="2">
            <Label>RT</Label>
            <KeyPress>XboxRightTrigger</KeyPress>
        </DynamicKey> -->
        <DynamicKey Col="5" Height="2" Row="13" Width="2"> 
            <KeyGroup>QuickKey</KeyGroup>
            <Label>RT\nToggle</Label>
            <KeyToggle PauseWhenLookingAtThisKey="true">XboxRightTrigger</KeyToggle>
        </DynamicKey>

        <DynamicKey Col="0" Height="2" Row="9" Width="2">
            <Label>X</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <KeyPress>XBoxX</KeyPress>
        </DynamicKey>
        <DynamicKey Col="0" Height="2" Row="11" Width="2">
            <Label>Y</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <KeyPress>XBoxY</KeyPress>
        </DynamicKey>

        <DynamicKey Col="0" Height="2" Row="13" Width="2">
            <Label>A</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <KeyPress>XBoxA</KeyPress>
        </DynamicKey>
        <DynamicKey Col="0" Height="2" Row="15" Width="2">
            <Label>B</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <KeyPress>XBoxB</KeyPress>
        </DynamicKey>

        <DynamicKey Col="3" Height="2" Row="16" Width="2">
            <Label>Toggle\nY</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <KeyPress>XBoxY</KeyPress>
        </DynamicKey>


        <DynamicKey Col="20" Height="2" Row="9" Width="2">
            <Label>1</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <Text>1</Text>
        </DynamicKey>
        <DynamicKey Col="20" Height="2" Row="11" Width="2">
            <Label>2</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <Text>2</Text>
        </DynamicKey>
        <DynamicKey Col="20" Height="2" Row="13" Width="2">
            <Label>3</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <Text>3</Text>
        </DynamicKey>
        <DynamicKey Col="20" Height="2" Row="15" Width="2">
            <Label>4</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <Text>4</Text>
        </DynamicKey>


        <DynamicKey Col="4" Height="2" Row="9" Width="2">
            <Label>Quick RT</Label>
            <KeyGroup>QuickKey</KeyGroup>
            <KeyPress>XboxRightTrigger</KeyPress>
        </DynamicKey>

        <DynamicKey Col="16" Height="2" Row="16" Width="2">
            <Label>LB+RB</Label>
            <KeyDown>XboxRightShoulder</KeyDown>
            <KeyPress>XboxLeftShoulder</KeyPress>
            <KeyUp>XboxRightShoulder</KeyUp>
        </DynamicKey>
        <DynamicKey Col="18" Height="2" Row="14" Width="2">
            <Label>Minimise</Label>
            <ChangeKeyboard>asdjioh asduio sahu</ChangeKeyboard>
        </DynamicKey>
        <DynamicKey Col="18" Height="2" Row="16" Width="2">
            <Label>Back</Label>
            <Action>BackFromKeyboard</Action>
        </DynamicKey>
    </Content>
</Keyboard>