<Keyboard>
  <Name>Gamepad-sens</Name>
  <SymbolMargin>10</SymbolMargin>
  <BackgroundColor>Transparent</BackgroundColor>
  <Height>100%</Height>
  <Width>100%</Width>
  <Position>Bottom</Position>
  <BackgroundColor>Transparent</BackgroundColor>
  <BorderColor>Transparent</BorderColor>
  <Grid>
    <Rows>8</Rows>
    <Cols>10</Cols>
  </Grid>
  <KeyGroup BackgroundColor="black" CompletionTimes="10, 1000" KeyDownOpacity="1" LockOnTime="25" Name="QuickKey" Opacity=".9"/>
  <KeyGroup BackgroundColor="black" CompletionTimes="50%" KeyDownOpacity="1" LockOnTime="25" Name="HalfSpeed" Opacity=".9"/>
  <KeyGroup AutoScaleToOneKeyHeight="false" AutoScaleToOneKeyWidth="false" Name="Scaling"/>
  <Content>
    <DynamicKey Col="0" Row="0">
      <Label>Start/\nMenu</Label>
      <KeyPress>XboxStart</KeyPress>
    </DynamicKey>
    <DynamicKey Col="0" Row="1">
      <Label>Back/\nView</Label>
      <KeyPress>XboxBack</KeyPress>
    </DynamicKey>
    <DynamicKey Col="2" Row="0">
      <Label>L Joy\n(slow)</Label>
      <Action Payload="0.5">LeftJoystick</Action> 
    </DynamicKey>
    <DynamicKey Col="3" Row="0">
      <Label>L Joy\n(move)</Label>
      <Action>LeftJoystick</Action>
    </DynamicKey>
    <DynamicKey Col="6" Row="0">
      <Label>R Joy\n(zoom)</Label>
      <Action Payload="2.5">RightJoystick</Action>
    </DynamicKey>
    <DynamicKey Col="7" Row="0">
      <Label>Minimise</Label>
      <Action>Minimise</Action>
      <!-- <Label>R - slow</Label>
      <Action Payload="1.0">RightJoystick</Action> -->
    </DynamicKey>
    <DynamicKey Col="9" Row="0">
      <Label>D-pad</Label>
      <KeyGroup>HalfSpeed</KeyGroup>
      <ChangeKeyboard BackReturnsHere="False">TestXboxMore</ChangeKeyboard>
    </DynamicKey>

    <DynamicKey Row="5" Col="0">
      <Label>Copy\nsettings</Label>
      <Action>CopyJoystickSettings</Action>
    </DynamicKey>
    <DynamicKey Row="5" Col="1">
      <Label>Vertical\nsensitivity ++</Label>
      <Action>JoystickYSensitivityUp</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="6" Col="0">
      <Label>Horizontal\nsensitivity --</Label>
      <Action>JoystickXSensitivityDown</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    
    <DynamicKey Row="6" Col="2">
      <Label>Horizontal\nsensitivity ++</Label>
      <Action>JoystickXSensitivityUp</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>      
    </DynamicKey>    
    <DynamicKey Row="7" Col="1">
      <Label>Vertical\nsensitivity −−</Label>
      <Action>JoystickYSensitivityDown</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="7" Col="0">
      <Label>Reset\nCentre</Label>
      <Action>ResetJoystick</Action>
    </DynamicKey>


    <DynamicKey Col="9" Row="4">
      <Label>X</Label>  
      <KeyPress>XboxX</KeyPress>    
    </DynamicKey>
    <DynamicKey Col="9" Row="5">
      <Label>Y</Label>
      <KeyPress>XboxY</KeyPress>                
    </DynamicKey>
   <!--  <DynamicKey Col="6" Row="6">
      <Label>Pick\nup</Label>
      <KeyDown>XboxX</KeyDown>
      <Wait>100</Wait>
      <KeyUp>XboxX</KeyUp>
    </DynamicKey> -->
    <DynamicKey Col="7" Row="6">
        <Label>RB</Label>
        <KeyPress>XboxRightShoulder</KeyPress>                
    </DynamicKey>
    <DynamicKey Col="8" Row="6">
        <Label>RT</Label>
        <KeyPress>XboxRightTrigger</KeyPress>                
    </DynamicKey>
    <DynamicKey Col="9" Row="6">
      <Symbol>BackIcon</Symbol>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
    <!-- <DynamicKey Col="0" Row="6">
      <Label>Joystick\nSettings</Label>
      <ChangeKeyboard BackReturnsHere="True">../joystick_settings</ChangeKeyboard>
    </DynamicKey> -->
  </Content>
</Keyboard>